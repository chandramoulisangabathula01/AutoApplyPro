{
  "manifest_version": 3,
  "name": "AutoApply Pro",
  "version": "1.0.0",
  "description": "AI-powered job application automation",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.monster.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoApply Pro"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}